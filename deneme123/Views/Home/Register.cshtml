@model User
@{
    ViewData["Title"] = "Üye Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />



@Html.Raw(ViewResultExtensions.ViewResult(ViewBag.Result))

    <div class="container-fluid " style="margin-top:100px">
        <div class="" style="margin-top:100px">
            <div class="rounded d-flex justify-content-center">
                <div class="col-md-4 col-sm-12 shadow-lg p-5 bg-light">
                    <div class="text-center">
                        <h3 class="text-primary">Üye OL</h3>
                    </div>
                    <div class="p-4">
                        <form asp-action="Register" method="post" class="row g-3 needs-validation" novalidate>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary">
                                    <i class="bi bi-person-plus-fill text-white"></i>
                                </span>
                                <input type="text" asp-for="UserName" class="form-control" placeholder="İsim" id="validationCustom03" required>
                                <div class="invalid-feedback">
                                    Lütfen İsim Giriniz.
                                </div>
                            </div>
                            <div class="input-group mb-3 position-relative">
                                <span class="input-group-text bg-primary">
                                    <i class="bi bi-person-plus-fill text-white"></i>
                                </span>
                                <input type="text" asp-for="UserSurname" class="form-control" placeholder="Soy İsim" id="validationCustom03" required>
                                <div class="invalid-feedback">
                                    Lütfen Soy İsim Giriniz.
                                </div>

                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary">
                                    <i class="bi bi-envelope text-white"></i>
                                </span>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Email" id="validationCustom03" required>
                                <div class="invalid-feedback">
                                    Lütfen Email Giriniz.
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary">
                                    <i class="bi bi-key-fill text-white"></i>
                                </span>
                                <input type="password" asp-for="Passs" class="form-control" placeholder="Şifre" id="validationCustom03" required>
                                <div class="invalid-feedback">
                                    Lütfen Şifre Giriniz.
                                </div>
                            </div>
                            <div class="form-check col-12 justify-content-center text-center">
                                <input class="form-check-input text-center" type="checkbox" value="" id="invalidCheck" required>
                                <label class="form-check-label text-center" for="invalidCheck" style="margin:auto;">
                                    <a class="text-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" href="#!">Üyelik Sözleşmesi'ni</a> Kabul Ediyorum.
                                </label>
                                <div class="invalid-feedback text-center">
                                    Üyelik Sözleşmesini Kabul Etmeniz Gerekir.
                                </div>

                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Üyelik Sözleşmesi</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bu siteyi kullanan herkes üyelik şartları ve kullanım koşullarını kabul etmiş sayılır.<br />
                                                Ve-fat.com sitenin kapsamını , niteliğini , amacını , yayın haklarını , üyelik ve kullanım koşullarını değiştirme hakkını her zaman saklı tutar. Sitede yayınlandığı an geçerli sayılacaktır.<br />
                                                Sitemizin amacı vefat eden yakınlarınızı , tanıdıklarınıza duyurabileceğiniz ücretsiz platformdur ekstra satın alımlar sunar.<br />
                                                Bu sitedeki tüm kodlar , metinler , veriler , görseller ve benzeri tüm içerik ve-fat.com adlı web sitesine aittir. Ve-fat.com yazılı izni olmadan hiçbir şekilde kopyalanamaz , değiştirilemez , çoğaltılamaz.<br />
                                                Sitemizdeki tüm içerikte hata veya kusur olmayacağı ve kesintisiz hizmet verileceğini garanti etmemekteyiz.<br />
                                                Sadece 18 yaşından büyükler ve-fat.com'u kullanabilirler.

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Kapat</button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid col-12 mx-auto">
                                <button type="submit" id="btn1" class="btn btn-primary">Üye Ol</button>
                            </div>

                            <p class="text-center mt-3">
                                Hesabın Var mı ?
                                <a class="text-primary"  asp-area="" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                            </p>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   



<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
