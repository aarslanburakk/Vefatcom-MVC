@model IEnumerable<User>
@{

    ViewData["Title"] = "Kullanıcı Sİl ve Güncelle";
    Layout = "~/Views/Shared/Admincss.cshtml";
}


<div class="m-5">

    <div class="bg-success text-white m-5 p-4">
        <h2>Üyeler</h2>
    </div>



    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı ID</th>
                    <th>Kullanıcı Ad</th>
                    <th>Kullanıcı Soyad</th>
                    <th>E-Mail</th>
                    <th>Şifre</th>


                </tr>
            </thead>

            @foreach (var item in Model)
            {


                <tr>

                    <td>@item.Id  </td>
                    <td>@item.UserName  </td>
                    <td>@item.UserSurname  </td>
                    <td>@item.Email  </td>
                    <td>@item.Passs  </td>
                    <td>
                        <form asp-action="DeleteUsers" method="post">
                            <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Güncelle</a>
                            <input type="hidden" name="id" value="@item.Id" />
                          <button type="submit"  onclick="return confirm('Silmek İstediğinden Emin Misin ?') " class="btn btn-danger btn-sm">Sil</button>

                            
                        </form>
                    </td>


                </tr>


            }

        </table>
    </div>
</div>