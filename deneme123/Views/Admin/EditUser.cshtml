@model User
@{
    ViewData["Title"] = "Vefat Güncelle";
    Layout = "~/Views/Shared/Admincss.cshtml";
}



<form asp-action="EditUser" method="post">

    <div class="form-group">
        <label asp-for="Id">Kullanıcı ID</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Ad</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserSurname">Kullanıcı Soyad</label>
         <input asp-for="UserSurname" class="form-control"/>

    </div>
    <div class="form-group">
        <label asp-for="Email">Kullanıcı E-Mail</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Passs">E-Mail Şifre</label>
        <input asp-for="Passs" class="form-control " />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>


</form>