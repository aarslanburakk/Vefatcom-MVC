<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vefat.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/deneme123.styles.css" asp-append-version="true" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">VE-FAT.COM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Admin" asp-action="Create">VEFAT İLANI VER</a>
                        </li>
                        <li class="nav-item">
                             <a class="nav-link " tabindex="-1" aria-disabled="true"  asp-area="" asp-controller="Admin" asp-action="About">HAKKIMIZDA</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin Panel
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Admin" asp-action="DeadImage">VEFAT RESİM EKLE</a></li>
                                <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Admin" asp-action="DelateImage">VEFAT RESİM SİL</a></li>                         
                                <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Admin" asp-action="DeadDelate">VEFAT İLANI ONAYLA</a>
                                <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Admin" asp-action="Comments">YORUM ONAYLA</a>
                                <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Admin" asp-action="Users">TÜM KULLANICILAR</a>
                                
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="Logout">Çıkış Yap</a>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="border-top footer text-muted bg-light ">
        <div class="container">
            &copy; 2022 - VE-FAT.COM -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jsx.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="./js/jsx.js"></script>
</body>
</html>
