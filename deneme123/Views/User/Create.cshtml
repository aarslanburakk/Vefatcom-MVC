@using deneme123.Helpers
@model deneme123.Models.Dead
@{
    ViewData["Title"] = "Vefat Ekle";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


@Html.Raw(ViewResultExtensions.ViewResult(ViewBag.Result))
<div class="text-white m-5 p-4 text-center">
    <h2>  Vefat İlanı Ekle</h2>
</div>

<form asp-action="Create" method="post" class="m-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="formGroupExampleInput">Vefat Adı Soyadı</label>
        <input type="text" class="form-control" asp-for="DeadNameUsername" required="">
    </div>
    <div class="form-group">
        <label asp-for="CityId" for="formGroupExampleInput">Vefat İli</label>
        <select asp-for="CityId" asp-items="@(new SelectList(@ViewBag.listofcity,"CityId","CityName"))" class="form-control" required=""></select>

    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Vefat Yaşı</label>
        <input type="number" class="form-control" asp-for="DeadAge" required="">
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput">Vefat Tarihi</label>
        <input type="date" class="form-control" asp-for="DeadDate" required="">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput">Vefat Resim (İsteğe Bağlı)</label>
        <input type="file" id="files" class="form-control" asp-for="DeadImage">
    </div>
    
    <div class="d-grid gap-2 col-6 m-5 mx-auto">
        <input type="hidden" class="form-control" asp-for="UserId">
        <button class="btn btn-primary" type="submit" value="sumbit">Vefat Ekle</button>
    </div>
</form>
